- page_title t('spaces.sidebar.users'), in: @space.name
- spaces_menu_at :users
= render 'spaces/sidebar', space: @space, full: false

#user-list.content-block
  .content-block-header
    %h3= t('user.index.user_list.header', :count => @userCount)
  .content-block-middle.row-fluid
    - for user in @users
      .user-on-index
        = render :partial => 'users/detailed_user', :locals => { :user => user }
    - nav = page_navigation_links @users
    - unless nav.nil?
      .content-block-footer= nav
