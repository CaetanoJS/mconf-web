= content_for :sidebar do

  .sidebar-title= t('.title')
  .sidebar-subtitle= t('.subtitle')

  .sidebar-actions
    - if user_signed_in? && can?(:create, Space)
      = link_to t('.create_new_space'), new_space_path, :class => "btn btn-primary btn-block"
    - elsif !user_signed_in?
      - if current_site.registration_enabled?
        = link_to t('register.one'), register_path, :class => "btn btn-success btn-block"
      - else
        = link_to t('_other.login'), login_path, :class => "btn btn-primary btn-block"

  = render_sidebar_content_block('space-description-wrapper') do
    .content-block-middle
      %p.empty-space-description= t('space.index.select_at_left')
    - @spaces.each do |space|
      - has_access = user_signed_in? || space.public
      .content-block-middle{:id => "#{space.permalink}-description", :style => "display:none;"}
        .space-logo-wrapper
          - if has_access
            = link_logo_image(space, :size => '336x256', :title => space.name, :class => "logo logo-space")
          - else
            = logo_image(space, :size => '336x256', :title => space.name, :class => "logo logo-space")
        - if has_access
          = link_to space_path(space) do
            %h3.name= space.name
        - else
          %h3.name= space.name
        - space_ids = current_user.try(:space_ids) || []
        - if space_ids.include?(space.id)
          .is-member
            = icon_is_member
            = t('space.index.user_is_member')
        %p.description= first_words(space.description, 400)
        %p.details
          %span= t('space.member_count', :count => space.users.size)
          %span= t('space.post_count', :count => space.posts.size)
          - if mod_enabled?("events")
            %span= t('space.event_count', :count => space.events.size)
        = render :partial => "spaces/space_tags", :locals => { :space => space }
        - if has_access
          %p.action-links
            = link_to t('more'), space_path(space)

#space-filter-wrapper

  .search
    = hidden_field_tag :space_filter_text

  .filters
    .btn-group
      = link_to spaces_path(params.merge(my_spaces: nil)), :id => "show-spaces-all", :class => "btn btn-default btn-sm #{'active' unless params[:my_spaces]}", :type => "button" do
        = t('space.index.filters.all')
      - if user_signed_in?
        = link_to spaces_path(params.merge(my_spaces: true)), :id => "show-spaces-mine", :class => "btn btn-default btn-sm #{'active' if params[:my_spaces]}", :type => "button" do
          = t('space.index.filters.my_spaces')

    %span= t('space.index.order.order_by') + ':'
    .btn-group
      = link_to t('space.index.order.relevance'), spaces_path(params.merge(order: 'relevance')), class: "btn btn-default btn-sm tooltipped #{'active' if params[:order] == 'relevance'}", title: t('space.index.order.relevance_tip')
      = link_to t('space.index.order.alphabetic'), spaces_path(params.merge(order: 'abc')), class: "btn btn-default btn-sm #{'active' if params[:order] == 'abc'}"

#space-order-wrapper

= render "spaces/list_view", :spaces => @spaces, :user_spaces => @user_spaces, :extended => true

- nav = page_navigation_links @spaces
- unless nav.nil?
  .content-block-footer= nav


