= page_title t('.page_title')

#shibboleth-associate
  %h3= t('.title')

  #shibboleth-existent-account.col-xs-12.col-sm-6.col-md-5.col-md-offset-1.col-lg-3.col-lg-offset-3
    .alert.alert-gray= t('.existent_account.title')
    .shibboleth-block
      = simple_form_for :user, :url => shibboleth_create_association_path, :html => { :class => 'single-column' } do |f|
        = hidden_field_tag 'existent_account', '1'
        = f.input :login, :label => t('.user.login')
        = f.input :password, :label => t('.user.password')
        = f.button :wrapped, :value => t('.existent_account.link_to_this_account')

  #shibboleth-new-account.col-xs-12.col-sm-6.col-md-5.col-lg-3
    .alert.alert-gray= t('.new_account.title')
    .shibboleth-block
      = simple_form_for :user, :url => shibboleth_create_association_path do |f|
        = hidden_field_tag 'new_account', '1'
        = f.submit t('.new_account.create_new_account'), :class => 'btn btn-success btn-block btn-large'
