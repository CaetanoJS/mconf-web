- page_title t('.title')
- home_navbar_menu_at(:meetings)

= content_for :navbar_menu do
  = render "my/navbar_menu", user_spaces: @user_spaces

- cls = @meetings.count <= 0 ? 'empty' : ''
#my-meetings{ class: cls }
  - if @meetings.count > 0
    %h3= t('.subtitle')

    .btn-group.recordedonly-buttons
      = link_to my_meetings_path, class: "btn btn-default btn-sm #{'active' if params[:recordedonly].nil? }", type: "button" do
        = t(".recordedonly_true")
      = link_to my_meetings_path(recordedonly: 'false'), class: "btn btn-default btn-sm #{'active' if params[:recordedonly] == 'false' }", type: "button" do
        = t(".recordedonly_false")

    #my-meetings-list-container
      = render partial: 'shared/recording_list', locals: { meetings: @meetings, show_authors: false, redir_to: my_meetings_path }

  - else
    %h2= t('.no_meetings_headline')
