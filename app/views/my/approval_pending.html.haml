= page_title t('.title')

%h1= t('.title')

%h3.description
  = t('.description')

- has_open_section = mod_enabled?('spaces') || mod_enabled?('events')

- if has_open_section
  .interesting-links
    %span= t('.interesting_links')
    %ul
      - if mod_enabled?('events')
        %li= link_to t('.events_list'), events_path
      - if mod_enabled?('spaces')
        %li= link_to t('.spaces_list'), spaces_path
