= page_title @user.full_name

= content_for :sidebar do
  = render 'shared/user_card', user: @user

  - if can?(:update, @profile)
    .sidebar-top-action-button
      = link_to t('.edit_profile'), edit_user_profile_path(@user), class: "btn btn-default"

.container-fluid
  .profile-info
    .content-block-middle
      = render :partial => 'profiles/public_hcard'
      - if can?(:show, @profile)
        = render :partial => 'profiles/private_hcard'
  .profile-spaces

    .content-block-header
      %h3= t('profile.spaces')

    .content-block-middle
      = render 'users/user_spaces', user: @user, spaces: @user_spaces
