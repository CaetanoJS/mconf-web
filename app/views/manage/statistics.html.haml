#manage

  .modal-header
    = simple_form_for :statistics, url: manage_statistics_path, html: { class: 'single-column' } do |f|
      .modal-body
        .row
          .col-xs-12.col-sm-9
            .starts-at-wrapper
              .btn-group{ 'data-toggle': "buttons" }

                %label.btn.btn-default.active{ 'data-attr-value': '0' }
                  %input{ type: 'radio', checked: 'checked' }
                  = t('.filter.all')

                %label.btn.btn-default{ 'data-attr-value': '1' }
                  %input{ type: 'radio' }
                  = link_to manage_statistics_filter_path, class: "open-modal tooltipped", title: t('.filter.date') do
                    = icon_later
                    = t('.filter.date')

#statistics-list
  = render partial: 'statistics_list'
