-# locals:
-#  spaces (array of User)

.list-container.list-tablefied.container-fluid
  .resource-filter-container.list-item-header
    .resource-filter-with-text
      = t('.filter_count_with_text', :count => "<span class=\"resource-filter-count\">#{users.count}</span>".html_safe, :value => "<span class=\"resource-filter-value\"></span>".html_safe).html_safe
    .resource-filter-without-text
      = t('.filter_count_empty', count: users.count)
  - for user in users
    = render partial: 'user_item', locals: { user: user }

- if users.count > 0
  - nav = page_navigation_links users
  - unless nav.nil?
    .content-block-footer= nav
