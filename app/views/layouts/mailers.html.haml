!!! Strict
%html{:lang => I18n.locale.to_s}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}
    = stylesheet_link_tag "mailers", :media => "screen, projection"
    = yield :headers
  %body{:class => "#{@mailer_name} #{@mail_name}"}
    .message-body
      = yield
    .footer
      %p
        = '--'
        = Site.current.signature_in_html
